@model HackatonWeb.Feature.Map.Models.MapTeams

<div id='map'>
    @foreach (var team in Model.Teams)
    {
        <div class="country-marker" data-cordinates="[@team.Country.CountryLatitude, @team.Country.CountryLongitude]" data-name="@team.Country.CountryKey" data-text="@team.Country.CountryInfo"></div>
    }
</div>

<div class="modal" id="MyModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@Model.Title <span id="modal-country"></span></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="@Model.Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="teams">
                    @foreach (var team in Model.Teams)
                    {
                        Html.RenderPartial("~/Views/Team.cshtml", team);
                    }
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">@Model.Close</button>
            </div>
        </div>
    </div>
</div>